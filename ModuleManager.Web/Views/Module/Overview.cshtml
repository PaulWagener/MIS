<div class="container">
    <div class="row">

        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="active">Zoeken</li>
            </ol>
        </div>

        <div class="col-md-12">
            <h2>Zoekresultaten</h2>
        </div>

        <div id="primary" class="col-md-3">

            <div class="filters">
                <div id="search" class="input-group">
                    <input name="search" type="text" class="form-control search-query ajax" placeholder="Zoekterm" />
                    <span class="input-group-btn">
                        <button class="btn btn-default btn-search" type="button"><i class="fa fa-search"></i></button>
                    </span>
                </div>

                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#competentie">
                                    Competentie
                                </a>
                            </h4>
                        </div>
                        <div id="competentie" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="competentie" class="form-control ajax">
                                    <option>Procesanalyse uitvoeren</option>
                                    <option>Informatieanalyse uitvoeren</option>
                                    <option>Informatiesysteem ontwerpen</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#competentieniveau">
                                    Competentie niveau
                                </a>
                            </h4>
                        </div>
                        <div id="competentieniveau" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="competentieniveau" class="form-control ajax">
                                    <option>Beginner</option>
                                    <option>Ervaren</option>
                                    <option>Expert</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#minor">
                                    Minor
                                </a>
                            </h4>
                        </div>
                        <div id="minor" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="minor" class="form-control ajax">
                                    <option>Mobile Development</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#major">
                                    Major
                                </a>
                            </h4>
                        </div>
                        <div id="major" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="major" class="form-control ajax">
                                    <option>Software Ontwikkeling</option>
                                    <option>IBIS</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#fase">
                                    Opleidingsfase
                                </a>
                            </h4>
                        </div>
                        <div id="fase" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="fase" class="form-control ajax">
                                    <option>Propedeuse</option>
                                    <option>Hoofdfase bachelor</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#year">
                                    Leerjaar
                                </a>
                            </h4>
                        </div>
                        <div id="year" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="year" class="form-control ajax">
                                    <option selected>2014 - 2015</option>
                                    <option>2013 - 2014</option>
                                    <option>2012 - 2013</option>
                                    <option>2011 - 2012</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#block">
                                    Blok
                                </a>
                            </h4>
                        </div>
                        <div id="block" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="year" class="form-control ajax">
                                    <option selected>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#tag">
                                    Tags
                                </a>
                            </h4>
                        </div>
                        <div id="tag" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="tag" class="form-control ajax">
                                    <option selected>Big Data</option>
                                    <option>Milieu</option>
                                    <option>Spaans</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#reset">
                                    Reset Filters
                                </a>
                            </h4>
                        </div>
                        <div id="reset" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <a href="#" class="btn btn-danger btn-block">Reset</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div id="secondary" class="col-md-9">

            <div id="items" class="row">
                <div class="col-md-12">
                    
                    <table id="modules" class="table table-striped table-bordered" cellspacing="0" width="100%">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Naam</th>
                                <th>CursusCode</th>
                                <th>Blok</th>
                                <th>Fase</th>
                                <th>StudiePunten</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>

                </div>
            </div>

        </div>

    </div>
</div>



<div id="toggle-columns" style="display:none;">
    <div class="dropdown toggle-columns text-left" style="display: inline">
        <a class="dropdown-toggle btn btn-default btn-sm" data-toggle="dropdown" href="#">
            Weergave
            <b class="caret"></b>
        </a>
