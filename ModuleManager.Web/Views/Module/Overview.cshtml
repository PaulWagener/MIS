<div class="container">
    <div class="row">

        <div class="col-md-12">
            <ol class="breadcrumb">
                <li><a href="@Url.Action("Index", "Home")">Home</a></li>
                <li class="active">Zoeken</li>
            </ol>
        </div>

        <div class="col-md-12">
            <h2>Zoekresultaten</h2>
        </div>

        <div id="primary" class="col-md-3">

            <div class="filters">
                <div id="search" class="input-group">
                    <input name="search" type="text" class="form-control search-query ajax" placeholder="Zoekterm" />
                    <span class="input-group-btn">
                        <button class="btn btn-default btn-search" type="button"><i class="fa fa-search"></i></button>
                    </span>
                </div>

                <div class="panel-group" id="accordion">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#competentie">
                                    Competentie
                                </a>
                            </h4>
                        </div>
                        <div id="competentie" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="competentie" class="form-control ajax" id="FilterCompetentie" multiple>
                                    <option>Procesanalyse uitvoeren</option>
                                    <option>Informatieanalyse uitvoeren</option>
                                    <option>Informatiesysteem ontwerpen</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#competentieniveau">
                                    Competentie niveau
                                </a>
                            </h4>
                        </div>
                        <div id="competentieniveau" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="competentieniveau" class="form-control ajax" id="FilterCompetentieOpNiveau" multiple>
                                    <option>Beginner</option>
                                    <option>Ervaren</option>
                                    <option>Expert</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#fase">
                                    Fases
                                </a>
                            </h4>
                        </div>
                        <div id="fase" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select class="form-control ajax" id="FilterFases" multiple>
                                    <optgroup label="Major">
                                        <option>Software ontwikkelaar</option>
                                        <option>Bedrijfsinformatica</option>
                                    </optgroup>
                                    <optgroup label="Minor">
                                        <option>Business Intelligence & IT Governance</option>
                                        <option>Business Proces Management (BPM)</option>
                                        <option>Corporate Performance Management (CPM)</option>
                                        <option>Cybersafety</option>
                                        <option>Digitale Regelsystemen (DRS)</option>
                                        <option>Embedded Software (EMS)</option>
                                        <option>Everyware in a Mobile World (EVW)</option>
                                        <option>Middleware (MDW)</option>
                                        <option>Product Ontwikkeling (PO)</option>
                                        <option>Signaal bewerking (SB)</option>
                                        <option>Software Architectuur (SWA)</option>
                                    </optgroup>
                                    <optgroup label="Opleidingsfase">
                                        <option>Propedeuse</option>
                                        <option>Hoofdfase bachelor</option>
                                    </optgroup>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#year">
                                    Leerjaar
                                </a>
                            </h4>
                        </div>
                        <div id="year" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="year" class="form-control ajax" id="FilterLeerjaar">
                                    <option></option>
                                    <option>2014 - 2015</option>
                                    <option>2013 - 2014</option>
                                    <option>2012 - 2013</option>
                                    <option>2011 - 2012</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#block">
                                    Blok
                                </a>
                            </h4>
                        </div>
                        <div id="block" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="year" class="form-control ajax" id="FilterBlok" multiple>
                                    <option>1</option>
                                    <option>2</option>
                                    <option>3</option>
                                    <option>4</option>
                                    <option>5</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#tag">
                                    Tags
                                </a>
                            </h4>
                        </div>
                        <div id="tag" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <select name="tag" class="form-control ajax" id="FilterTags" multiple>
                                    <option>Big Data</option>
                                    <option>Milieu</option>
                                    <option>Spaans</option>
                                </select>

                            </div>
                        </div>
                    </div>
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4 class="panel-title">
                                <a data-toggle="collapse" data-parent="false" href="#reset">
                                    Reset Filters
                                </a>
                            </h4>
                        </div>
                        <div id="reset" class="panel-collapse collapse in">
                            <div class="panel-body">

                                <a href="#" class="btn btn-danger btn-block">Reset</a>

                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>

        <div id="secondary" class="col-md-9">

